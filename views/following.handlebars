<link rel="stylesheet" type="text/css" href="/css/awesomplete.css"/>
<br>
  <div class="container">
        <div class="jumbotron">
            <br><br>
            <h6>Add Company to List</h6>
            <form action="/api/" method="POST">
                <div class="row">
                    <div class="col-md-3"></div>

                         <div class="form-group col-md-6 col-sm-10 col-xs-10">

                            <input type="text" name="company_name" class="awesomplete" list="mylist" id="myinput"/>
        
                        </div>

                    <div class="col-md-3"></div>
                 </div>

                <center>
                    <button id="submit-button runBtn" type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Add Stock</button>
                </center>
            </form>
        

            
            <div class="col-md-12">
                <h4 class="followingList">Companies</h4>

                <div id="companies_list">
                    {{#each company_name}}
                    <form action="/company_delete/{{this.company_lists.id}}" method="POST">
                        <div class="input-group">
                            <li lass="form-control">{{this.company_lists.company_name}}</li>
                            <span class="input-group-btn">
                                <button class="mdl-button mdl-js-button mdl-button--icon mdl-button--colored" id="addBtn" type="submit">
                                    <i class="material-icons">delete</i>
                                </button>
                            </span>
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>


</div>
<script src="/static/js/awesomplete.js" async></script>
<script src="/static/js/dataList.js" async></script>
   